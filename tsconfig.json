{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "Bundler",
    "target": "ES2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "lib": [
      "DOM"
    ],
    "outDir": "${configDir}/lib",
    "strict": true,
    "declaration": true,
    "jsx": "react-jsx",
    "noImplicitAny": false
  },
  "include": ["packages"]
}
